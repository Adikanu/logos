{
  "transform": {
    ".*": "<rootDir>/node_modules/babel-jest"
  },
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json"
  ],
  "moduleDirectories": [
    "node_modules",
    "bower_components",
    "app/scripts"
  ],
  "moduleNameMapper": {
    "^.+?(\\?|\\!).+?$": "<rootDir>/test/lib/modulesMock.js",
    "^.+\\.(css|scss)$": "<rootDir>/test/lib/stylesMock.js",
    "^.+\\.(jpe?g|png|gif|ttf|eot|svg|md)$": "<rootDir>/test/lib/filesMock.js"
  },
  "setupFiles": [
    "<rootDir>/test/lib/setup.js"
  ],
  "testRegex": "/test/.*?\\.(test|spec)\\.js$",
  "collectCoverage": false,
  "collectCoverageFrom": [
    "app/scripts/**/*.{js,jsx}",
    "!app/scripts/**/*.dev.{js,jsx}",
    "!app/scripts/**/DevTools.jsx",
    "!app/scripts/vendor/*"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 20,
      "functions": 30,
      "lines": 30,
      "statements": 30
    }
  },
  "verbose": true
}
